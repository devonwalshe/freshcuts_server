%p#notice= notice
%h1 Product Categories
%table
  %thead
    %tr
      %th{:colspan => "3"}
  %tbody
    - @product_categories.each do |product_category|
      %tr
        %td= link_to 'Show', product_category
        %td= link_to 'Edit', edit_product_category_path(product_category)
        %td= link_to 'Destroy', product_category, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Product Category', new_product_category_path
